/**index.wxss**/
.container{
  padding-bottom: 0;
  background-color: #fff6f6;
  background-repeat: no-repeat;
  background-size: 100% auto; 
  background-position: bottom center;
}
/**轮播**/
.main-lunbo{
  top:0;
  left:0;
  width:100%;
  height:30%;
}

.lunbo{
  width: 100%;
  height: 100%;
}

.lunbo image{
  width: 100%;
  height: 100%;
}
/**功能导航**/
.main-core{
  width: 100%;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  display: flex;
  flex-flow: row wrap;
  align-content: flex-start;
  margin-left: 2%;
}
.main-core-item{
  margin:10rpx;
  margin-left: 1%;
  margin-right: 2%;
  display: flex;
  flex-flow: column wrap;
  box-sizing: border-box;
  width: 221rpx;
  height: 221rpx;
  border-radius: 5rpx;
  box-shadow: 5rpx 5rpx #a0a0a0;
}
.core-item-icon{
  display: block;
  width: 221rpx;
  height: 221rpx;
}
.core-item-name{
  display: block;
  margin: 5rpx;
}
.tit{
  padding-left: 2%;
  height: 36rpx;
  width: 128rpx;
  font-weight: bold;
  position: fixed;
  background-color: rgb(0, 17, 110);
  color: #7ab9ec;
}


.tianqi{
  margin-left: 3%;
  width: 95%;
}
.card{
  width: 720rpx;
  height: 250rpx;
  background: -webkit-linear-gradient(#a6d5ff, #659ac4); 
  margin-bottom: 2rpx;
  display:flex;
  color:rgb(75, 75, 75);
  border-radius: 5rpx;
  box-shadow: 5rpx 5rpx #a0a0a0;
}
.card image{
  margin-left: 20rpx;
  padding-top:60rpx;
  width: 200rpx;
  height: 200rpx;
}
.title{
  padding-left: 35rpx;
  padding-top: 25rpx;
  font-size: 35rpx;
  font-weight: bold;
  height: 40rpx;
}
.desc{
  width: 400rpx;
  padding-left: 35rpx;
  padding-top: 8rpx;
  font-size: 27rpx;
  height: 35rpx;
}
