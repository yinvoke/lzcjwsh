/**index.wxss**/
.container{
  padding-bottom: 0;
  background-color: #ffffff;
  background-repeat: no-repeat;
  background-size: 100% auto; 
  background-position: bottom center;
}
/**轮播**/
.main-lunbo{
  top:0;
  left:0;
  width:100%;
  height:350rpx;
  background-size:cover;
}

.lunbo{
  width: 100%;
  height: 100%;
}

.lunbo image{
  width: 100%;
  height: 100%;
}
/**功能导航**/
.main-core{
  display: flex;
  flex-flow: row wrap;
  align-content: flex-start;
  background: #fff;
  border-bottom: 1rpx solid #979797;
  padding: 15rpx 10rpx 10rpx;
  margin-bottom: 20rpx;
  min-height: 180rpx;
  overflow: hidden;
}
.main-core-item{
  display: flex;
  flex-flow: column wrap;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  width: 20%;
  height: 170rpx;
}
.main-core-item.disabled{
  color: #9c9c9c;
}
.core-item-icon{
  display: block;
  width: 85rpx;
  height: 85rpx;
  margin: 15rpx auto;
}
.core-item-name{
  display: block;
  margin: 5rpx;
}