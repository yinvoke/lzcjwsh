/**index.wxss**/
.container{
  padding-bottom: 0;
  background-color: #ffffff;
  background-repeat: no-repeat;
  background-size: 100% auto; 
  background-position: bottom center;
}
/**轮播**/
.main-lunbo{
  top:0;
  left:0;
  width:100%;
  height:350rpx;
  background-size:cover;
}

.lunbo{
  width: 100%;
  height: 100%;
}

.lunbo image{
  width: 100%;
  height: 100%;
}
/**功能导航**/
.main-core{
  display: flex;
  flex-flow: row wrap;
  align-content: flex-start;
  background: #fff;
  padding: 15rpx 10rpx 10rpx;
  margin-bottom: 20rpx;
  min-height: 180rpx;
  overflow: hidden;
}
.main-core-item{
  display: flex;
  flex-flow: column wrap;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  width: 20%;
  height: 170rpx;
}
.main-core-item.disabled{
  color: #9c9c9c;
}
.core-item-icon{
  display: block;
  width: 85rpx;
  height: 85rpx;
  margin: 15rpx auto;
}
.core-item-name{
  display: block;
  margin: 5rpx;
}
.tianqi{
  margin-left: 2%;
  width: 96%;
  background-color: #c0c0c0;
  box-shadow: 10rpx 10rpx #c0c0c0;
}
.card{
  width: 720rpx;
  height: 250rpx;
  background-color: rgba(11, 206, 255, 0.705);
  border: solid 1rpx #c0c0c0;
  margin-bottom: 2rpx;
  display:flex;
}
.card image{
  margin-left: 20rpx;
  padding-top:50rpx;
  width: 200rpx;
  height: 200rpx;
}
.title{
  padding-left: 35rpx;
  padding-top: 25rpx;
  font-size: 35rpx;
  font-weight: bold;
  height: 40rpx;
}
.desc{
  width: 400rpx;
  padding-left: 35rpx;
  padding-top: 8rpx;
  font-size: 27rpx;
  height: 35rpx;
}
