/* pages/table/table.wxss */
page{
  height: auto;
}
.coniter{
  justify-content: center;
  display: flex;
  align-items: center;
  background-color:#73b4ef;
  height: 100%;
}
.anit{
  width: 100%;
  height: 70rpx;
  background: red;
  position: absolute;
  color: white;
  font-size: 27rpx;
  font-weight: bold;
  line-height: 70rpx;
  top: -70rpx;
  text-align: center;
}
.show{
  top: -70rpx;
  animation: show 2s;
  animation-timing-function:ease;
}
@keyframes show
{
  0% {top:-70rpx;}
  10% {top:0rpx;}
  80% {top:0rpx;}
  100% {top:-70rpx;}
}
.flex-item {
  width: 95rpx;
  height: 100px;
}
.jw{
  background-color: white;
  width: 90%;
  border-radius: 5px;
  padding:0 10rpx;
  color:rgb(78, 78, 78);
}
.jwbind{
  background-color: white;
  width: 55%;
  height: 50rpx;
  border-radius: 5px;
  margin-left: 20%;
  line-height: 150%;
}
.cebian1{
  height:1560rpx;
  width:750rpx;
  display:flex;
  
}

.cebian2{
  background-color:#eaf5ff;
  color:#333132;
}
.line{
  width:750rpx;
  position: absolute;
  border-bottom:1rpx solid;
  color:#43685f;
}

.kcb-item {
  position: absolute;
  justify-content: center;
  display: flex;
  align-items: center;
  border-radius: 6rpx;
}

.smalltext {
  font-size: 24rpx;
  color: #1f1a3b;
  padding-left: 2rpx;
}

.top {
  padding-top: 10rpx;
  display: flex;
  flex-direction: row;
  background-color:#73b4ef;
  color:#140303;
  padding-left: 35rpx;
}

.top-text {
  width: 102rpx;
  height: 35rpx;
  font-size: 9pt;
  justify-content: center;
  display: flex;
  align-items: center;
}

.scroll {
  height: 93%;
  z-index: 101;
  position: fixed;
}

.left {
  width: 37rpx;
  height: 130rpx;
  font-size: 9pt;
  justify-content: center;
  display: flex;
  align-items: center;
}

.choose{
  display: flex;
  padding-bottom: 10rpx;
  text-align: center;
  background-color: #73b4ef;
  color:#1f1a3b;
  font-size:16px;
}

::-webkit-scrollbar
{
width: 0;
height: 0;
color: transparent;
}

/*mask*/
.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}
 
/*content*/
.drawer_box {
  width: 400rpx;
  overflow: hidden;
  position: fixed;
  top: 25%;
  left: 175rpx;
  z-index: 1001;
  background: #73b4ef;
  color: white;
}
 
.drawer_title{
  padding:20rpx;
  font: 24px "microsoft yahei";
  text-align: center;
  font-weight: bold;
}
.drawer_content {
  padding-top: 50rpx;
  height: 420rpx;
  overflow-y: scroll; /*超出父盒子高度可滚动*/
}
.drawer_content .description{
  margin-top: 15rpx;
  margin-left: 20rpx;
  margin-bottom: 8rpx;
  font-size: 32rpx;
}

