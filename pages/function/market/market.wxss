/* pages/function/market/market.wxss */
.container {
  height: 100%;
}
.shang{
  display: flex;
  flex-direction: row;
  justify-content: center;
  background-color: #7acfa6;
  height: 8%;
  width: 100%;
  position: fixed;
}
.xia{
  height: 92%;
  width: 100%;
  display: flex;
  flex-direction: row;
}
.find1{
  margin-top: 25rpx;
  margin-left: 15rpx;
  padding-top: 7rpx;
  height: 45rpx;
  width: 110rpx;
  color: rgb(252, 252, 252);
  border-radius: 30rpx;
  border: solid 2px rgb(252, 252, 252);
}
.find1 text{
  padding-top: 10rpx;
  margin-left: 15rpx;
  font-weight: bold;
}
.find2{
  margin-top: 20rpx;
  margin-left: 30rpx;
  padding-left:30rpx;
  background-color: #fff;
  border-radius: 30rpx;
  height: 65rpx;
  width: 660rpx;
}
.find3{
  margin-top: 35rpx;
  margin-left: 20rpx;
  height: 65rpx;
  width: 100rpx;
  color: rgb(252, 252, 252);
}
.find3 text{
  font-size: 32rpx;
}
.xia{
  width: 100%;
}
.zuo{
  width: 170rpx;
  height: 100%;
  position: absolute;
  background-color: #f5f5f5;
  z-index: 10;
  text-align: center;
}
.list{
  height: 80rpx;
  width: 100%;
  font-size: 30rpx;
  color: #747474;
  padding-top: 35rpx;
}
.you{
  position: absolute;
  margin-left: 170rpx;
  height: 100%;
  background-color: #ffffff;
}

.card{
  width: 100%;
  height: 220rpx;
  background-color: rgb(255, 255, 255);
  border-bottom: solid 1rpx #c0c0c0;
  margin-bottom: 2rpx;
  display:flex;
}
.card image{
  width: 220rpx;
  height: 220rpx;
}
.title{
  padding-left: 15rpx;
  padding-top: 12rpx;
  font-size: 30rpx;
  font-weight: bold;
  height: 50rpx;
}
.time{ 
  height: 30rpx;
  padding-left: 15rpx;
  padding-top: 10rpx;
  font-size: 22rpx;
}
.chengse{ 
  height: 90rpx;
  padding-left: 15rpx;
  padding-top: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
}
.jiage{
  padding-left: 15rpx;
  font-size: 29rpx;
  color: red;
}

.fatie{
  width: 120rpx;
  height: 120rpx;
  float: right;
  background-color: #ffffff;
  position: fixed;
  bottom: 0;
  right: 0;
  z-index: 1;
  border-radius: 310px;
  margin-right: 30px;
  margin-bottom: 140rpx;
}


/*mask*/
.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}
 
/*content*/
.drawer_box {
  width: 650rpx;
  overflow: hidden;
  position: fixed;
  top: 30%;
  left: 0;
  z-index: 1001;
  background: #FAFAFA;
  margin: -150px 50rpx 0 50rpx;
  border-radius: 10px;
}
 
.drawer_title{
  padding:17rpx;
  font: 20px "microsoft yahei";
  text-align: center;
  border-bottom: solid 2px #7acfa6;
}
.drawer_content {
  padding-top: 17rpx;
  height: 750rpx;
  overflow-y: scroll; /*超出父盒子高度可滚动*/
}
.drawer_content .description{
  margin-left: 20rpx;
  margin-bottom: 8rpx;
  font-size: 27rpx;
}
.drawer_content image{
  margin-left: 15rpx;
}

.btn_ok{
  padding: 10px;
  font: 29rpx "microsoft yahei";
  text-align: center;
  border-top: 1px solid #E8E8EA;
  background-color: #7acfa6;
  font-weight: bold;
  color: white;
}
.noc{
  width: 420rpx;
  margin-top: 70%;
  margin-left: 160rpx;
  font-size: 36rpx;
  font-weight: bold;
}
.content-ending{
  width: 100%;
  color: rgb(148, 148, 148);
  margin-left:40%;
}

::-webkit-scrollbar
{
width: 0;
height: 0;
color: transparent;
}


