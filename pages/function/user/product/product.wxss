/* pages/function/user/product/product.wxss */
.container{
  color: #666;
}

.logo {
  width: 200rpx;
  height: 200rpx;
  border: 1rpx solid #dfdfdf;
  border-radius: 10rpx;
  background-color: #fff;
  margin: 0 auto;
  margin-top: 80rpx;
  text-align: center;
  line-height: 200rpx;
}

.logo-image{
  width: 160rpx;
  height: 160rpx;
  vertical-align: middle;
}

.name{
  text-align: center;
  font-size: 50rpx;
  margin-top: 50rpx;
}

.about{
  font-size: 30rpx;
  text-align: center;
  margin-top: 100rpx;
}

.about-text{
  margin-top: 20rpx;
  display: block;
}

.bottom-container{
  font-size: 25rpx;
  text-align: center;
  padding-top: 300rpx;
}

.about-button{
  font-size: 32rpx;
  margin-bottom:40rpx;
  border: solid 1rpx #1488CC;
  background-color: #fff;
  color: #1488CC;
  width: 200rpx;
  height: 60rpx;
  line-height: 185%;
}