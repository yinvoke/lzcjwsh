<!--pages/function/confession/message/message.wxml-->
<view>
  <view class='top'><text>我的消息</text></view>
  <scroll-view scroll-y="true" bindscrolltolower="scrollToLower" class="timeline" scroll-top="{{scrollTop}}" bindscroll="scroll">
    <view class="tweet-container" wx:for="{{huifu}}"  wx:key="item.id" bindtap="jumpDetails" id='{{index}}'>
      <view class="top-container flex-row">
        <image class="card-avatar" src="{{item.head}}"></image>
        <view class="user-container">
          <text class="card-id">{{item.src}}</text>
          <text class="card-time">{{item.time}}</text>
        </view>
      </view>
      <view class="middle-container flex-column"  data-route="../details/details" >
        <text class="message-text">{{item.con}}</text>
        <view class='bei'><text class="message-text" style='font-size:25rpx;'>回复了我的评论：{{item.message}}</text></view>
      </view>
    </view>
    <text class="content-ending">{{remind}}</text>
  </scroll-view>
</view>
