/* pages/function/confession/details/details.wxss */
.timeline{
  height: 100%;
  background-color: #eceaea;
}
.tweet-container {
  background-color: white;
  margin-bottom: 20rpx;
  border-radius: 4rpx;
}
.charu{
  background-color: white;
  border-radius: 4rpx;
  height: 45rpx;
  padding-top: 10rpx;
  padding-left: 15rpx;
}
.tweet-container2 {
  background-color: white;
  border-radius: 4rpx;
  border-top: solid 1px #eaebec;
  border-bottom: solid 1px #eaebec;
}

.top-container {
  padding: 20rpx;
}
.user-container {
  display: flex;
  flex-direction: column;
  margin-left: 18rpx;
}
.card-avatar {
  background-color: #ffffff;
  width: 75rpx;
  height: 75rpx;
  border-radius: 8rpx;
  margin-right: 12rpx;
  margin-top: 3rpx;
}
.card-id {
  font-size: 28rpx;
  color: #535353;
  margin-top: 3rpx;
}
.card-time {
  font-size: 24rpx;
  color: #8999a5;
  margin-top: 3rpx;
}
.card-name {
  color: #000000;
  font-weight: bold;
  font-size: 35rpx;
  margin: 12rpx 0;
}
.middle-container {
  padding: 20rpx;
}
.message-text{
  color: #333;
  font-size: 30rpx;
  line-height: 40rpx;
  margin-left: 95rpx;
}
.message-image {
  width: 100%;
  margin-top: 16rpx;
  background-color: #eceaea;   
}
.bottom-container {
  height: 66rpx;
  background-color: #ffffff;
}
.bottom-tool {   
  justify-content: center;
  align-items: center;
}
.bottom-tool-text {
  margin: 0 10rpx;
  color: #6D6D78;
  font-size: 26rpx;
}
.bottom-tool-image {
  height: 30rpx;
  width: 30rpx;
  margin-top: 0;
  margin-right: 0;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
/*logo*/
.logo{
  background-color: #eceaea;
  height: 35rpx;
  width: 100%;
  margin-top:5rpx;
  margin-bottom: 110rpx;
}
.logo text{
  margin-top: 3rpx;
  margin-left: 45%;
}


.comment{
  border-top: solid 1rpx #c7c7c7;
  background-color: #fafbfc;
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom:0px;
  display: flex;
}

input{
  background-color: #fff;
  width: 78%;
  margin: 13rpx;
  border: solid 1rpx #c7c7c7;
  border-radius: 8rpx;
  padding: 10rpx;
}

.comment .like{
  height: 60rpx;
  width: 60rpx;
  margin-top: 19rpx;
  margin-left: 20rpx;
}

.commentarea{
  margin:15rpx 0;
  margin-left: 95rpx;
  background-color: #f7f7f7;
  justify-content: flex-start;
  align-items: flex-start;
}
.comments-block{
  margin: 20rpx ;
}
.commentarea-text{
  font-size: 27rpx;
}
