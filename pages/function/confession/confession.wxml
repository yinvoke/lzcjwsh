<!--pages/function/confession/confession.wxml-->
<scroll-view scroll-y="true" bindscrolltolower="scrollToLower" class="timeline" scroll-top="{{scrollTop}}" bindscroll="scroll">
  <view class="main-core">
    <navigator class="main-core-item" url="{{'/pages/function/confession/showlove/showlove'}}">
      <image class="core-item-icon" src="/assets/core/confession.png"></image>
      <text class="core-item-name">表白墙</text>
      <image class="core-item-icon" src="/assets/core/confession.png"></image>
      <text class="core-item-name">一键匹配</text>
      <image class="core-item-icon" src="/assets/core/confession.png"></image>
      <text class="core-item-name">消息提醒</text>
      <image class="core-item-icon" src="/assets/core/confession.png"></image>
      <text class="core-item-name" >发起表白</text>
    </navigator>
  </view>
  <view class='flex-row flex-rest-width'>
    <image src='/assets/confession/tiezi.png' style='width:40rpx;height:40rpx;margin-top:-10rpx;'></image>
    <text >帖子列表</text>
  </view>
  <view class="tweet-container" wx:for="{{timeline}}" wx:key="item.id" bindtap="jumpDetails" id='{{item.id}}'>
    <view class="top-container flex-row">
      <image wx:if="{{item.isAnonym==false}}" class="card-avatar" src="http://119.3.46.32:8014/{{item.head}}"></image>
      <image wx:if="{{item.isAnonym==true && item.gender==0}}" class="card-avatar" src="/assets/main/woman.png"></image> 
      <image wx:if="{{item.isAnonym==true && item.gender==1}}" class="card-avatar" src="/assets/main/man.png"></image> 
      <view class="user-container">
        <text class="card-id">{{item.src}}</text>
      </view>
    </view>
    <view class="middle-container flex-column"  data-route="../details/details" >
      <text class="card-name">写给：{{item.dst}}</text>
      <text class="message-text">{{item.description}}</text>
      <image class="message-image"
        data-original-pic="{{item.picUrl}}" 
        wx:if="{{item.picUrl}}" 
        src="{{item.picUrl}}" 
        mode="aspectFill"
      ></image>
    </view>
    <view class="bottom-container flex-row"  data-route="../details/details" >
      <view class="flex-row flex-rest-width" style='justify-content:flex-start;align-items:flex-start;margin-left:30rpx;margin-top:10rpx;'>
        <text class="card-time">表白墙 · {{item.time}}</text>
      </view>
      <view class="bottom-tool flex-row flex-rest-width" >
        <view style='margin:20rpx;'>
          <image wx:if="{{islike}}"  src='/assets/confession/like.png' class='bottom-tool-image'></image>
          <image wx:else  src='/assets/confession/dislike.png' class='bottom-tool-image'></image>
          <text class="bottom-tool-text">{{item.thumb}}</text>
        </view>
        <view>
          <image src='/assets/confession/comment.png' class='bottom-tool-image'></image>
          <text class="bottom-tool-text">{{item.comNum}}</text>
        </view>
      </view>
    </view>
  </view>
  <image wx:if="{{floorstatus}}" src='/assets/more/return.png' class='goTop' bindtap="goTop" style='opacity:0.3'/>
</scroll-view>

